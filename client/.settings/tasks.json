{
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "args": [
        "--no-color"
    ],
    "tasks": [
        {
            "taskName": "compile",
            "isBuildCommand": true,
            "showOutput": "always",
            "problemMatcher": "$lessCompile"
        },
        {
            "taskName": "test",
            "isTestCommand": true,
            "showOutput": "always",
            "problemMatcher": "$lessCompile"
        }
    ]
}